[flake8]
max-line-length = 88
extend-ignore = 
    E203,
    W503,
    E501,
    E402,
    F401
exclude = 
    .git,
    __pycache__,
    .venv,
    .eggs,
    *.egg,
    build,
    dist,
    .tox,
    .mypy_cache
per-file-ignores =
    # Tests can have longer lines and unused imports
    */tests/*:F401,E501
    # Config files might have long lines
    */config.py:E501